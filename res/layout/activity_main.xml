<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    tools:context="com.serenegiant.usbcameratest3.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_centerInParent="true" >
		
        <RelativeLayout
	        android:id="@+id/camera_layout_L"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <com.serenegiant.widget.UVCCameraTextureView
                android:id="@+id/camera_view_L"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/frame_image_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/camera_view_L"
                android:layout_alignLeft="@+id/camera_view_L"
                android:layout_alignRight="@+id/camera_view_L"
                android:layout_alignTop="@+id/camera_view_L"
                android:src="@drawable/border" />



        </RelativeLayout>


    </LinearLayout>

     <ToggleButton
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="ToggleButton" />     

    <RelativeLayout
        android:id="@+id/RelativeLayout_UI"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/textView_Volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkBox_Sound"
            android:layout_alignLeft="@+id/textView_Speed"
            android:text="Volume"
            android:textColor="@color/WHITE" />
        
        <CheckBox
            android:id="@+id/checkBox_Sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/seekBar_Volume"
            android:layout_toLeftOf="@+id/seekBar_Volume"
            android:text="Mute"
            android:textColor="@color/WHITE" />
        
         <EditText
            android:id="@+id/editText_Debug"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="44dp"
            android:ems="10" />

         <CheckBox
             android:id="@+id/checkBox_Speed"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/checkBox_Sound"
             android:layout_centerVertical="true"
             android:text="10Km/h"
             android:textColor="@color/WHITE" />

         <TextView
             android:id="@+id/textView_Speed"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/checkBox_Speed"
             android:layout_alignLeft="@+id/TextView_Sensitivity"
             android:text="Speed"
             android:textColor="@color/WHITE" />

         <SeekBar
             android:id="@+id/seekBar_Volume"
             android:layout_width="120dp"
             android:layout_height="wrap_content"
             android:layout_above="@+id/textView_Speed"
             android:layout_alignLeft="@+id/seekBar_Speed"
             android:layout_centerHorizontal="true" />

         <TextView
             android:id="@+id/TextView_Sensitivity"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/editText_Debug"
             android:layout_alignLeft="@+id/checkBox_Speed"
             android:layout_marginBottom="55dp"
             android:text="Sensitivity"
             android:textColor="@color/WHITE" />

         <SeekBar
             android:id="@+id/seekBar_Speed"
             android:layout_width="120dp"
             android:layout_height="wrap_content"
             android:layout_alignTop="@+id/textView_Speed" 
             android:layout_centerHorizontal="true"/>

         <SeekBar
             android:id="@+id/seekBar_Sensitivity"
             android:layout_width="120dp"
             android:layout_height="wrap_content"
             android:layout_alignTop="@+id/TextView_Sensitivity"
             android:layout_centerHorizontal="true" />

         <TextView
             android:id="@+id/textView_SpeedValue"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/checkBox_Speed"
             android:layout_toRightOf="@+id/textView_Volume"
             android:text="0"
             android:textColor="@color/WHITE"
             android:textSize="@android:dimen/app_icon_size" />
                 
    </RelativeLayout>
        
    <ImageButton
        android:id="@+id/capture_button"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera" />


</RelativeLayout>